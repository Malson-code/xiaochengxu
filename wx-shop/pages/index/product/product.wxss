/* 产品详情页 */

.product-wrap{
  padding-bottom: 120rpx;
  background-color: #e1e1e1;
}


.slide-image{
  width: 100%;
  height: 100%;
}
.product-swiper{
  height: 780rpx
}

.product-state{
  padding: 30rpx 40rpx;
  font-size: 30rpx;
  line-height: 44rpx;
  border-bottom: 1px solid #ddd;
  background-color: #fff
}

.product-price{
  color: #f56600;
  line-height: 80rpx;
  font-size: 48rpx
}

.product-other{
  padding: 0 40rpx;
  margin-top: 10rpx;
  background-color: #fff
}

.product-list{
  height: 100rpx;
  line-height: 100rpx;
  background-image: url(data:image/svg+xml;base64,);
  background-repeat: no-repeat;
  background-position: right 30rpx;
  background-size: 40rpx;
  font-size: 34rpx
}
.product-list .text{
  color: #888;
  margin-right: 30rpx
}


.product-buy{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  font-size: 26rpx;
  z-index: 2;
  box-shadow: 0 0 30rpx #d1d1d1;
}
.product-buy-list1{
  flex-basis: 160rpx;
  text-align: center;
  color: #888
}
.product-buy-list1 image{
  width: 50rpx;
  height: 50rpx
}
.product-buy-list2{
  flex-grow: 1;
  text-align: center;
  font-size: 40rpx;
  background-color: #f56600;
  color: #fff;
  height: 100%;
  line-height: 120rpx
}

.product-comment{
  margin-top: 10rpx;
  background-color: #fff;
}

.product-comment .title{
  position: relative;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #eee;
  height: 90rpx;
}
.active{
  color: #f56600;
}
.product-comment .title .list{
  text-align: center;
  flex-grow: 1
}
.product-comment .line{
  width: 50%;
  height: 1px;
  background-color: #f56600;
  position: absolute;
  top: 100%;
  transition: left 0.2s linear;
}
.product-comment .content{
  /* padding: 20rpx 40rpx; */
}

.content-img{
  width: 100%;
  height: 940rpx
}

.comment-wrap{
  
}

.comment-list{
  display: flex;
  position: relative;
  align-items: center
}
.comment-logo{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx
}
.comment-logo image{
  width: 100%;
  height: 100%
}

.comment-level{
  padding-left: 70rpx;
  position: absolute;
  width: 140rpx;
  height: 60rpx;
  font-size: 34rpx;
  line-height: 60rpx;
  color: #888;
  right: 30rpx;
  background-image: url(data:image/png;base64,);
  background-repeat: no-repeat;
  background-size: 60rpx;
}

.comment-name{
  font-size: 28rpx;
  line-height: 46rpx;
}

.comment-content{
  width: 100%;
  line-height: 46rpx;
  word-spacing: 2px;
  margin-top: 20rpx;
  color: #555;
  font-size: 35rpx
}

.comment-pic{
  display: flex;
  margin-top: 20rpx;
  flex-wrap: wrap;
}

.comment-pic image{
  width: 150rpx;
  height: 150rpx;
  margin-bottom: 20rpx;
  margin-right: 17.6rpx
}

.product-bottom{
  text-align: center;
  color: #999;
  font-size: 28rpx;
  height: 50rpx;
}

.comment-for{
  margin-bottom: 28rpx;
  padding: 20rpx 40rpx;
  border-bottom: 1px solid #ccc
}