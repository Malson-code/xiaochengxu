
.search-wrap{
  height: 120rpx;
  background-color: #dd4c49;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative
}

.search-input{
  width: 68%;
  height: 80rpx;
  background-color: #fff;
  box-sizing: border-box;
  padding-left: 50rpx;
  border-radius: 10rpx;
}
.search-icon{
  width: 60rpx;
  height: 60rpx;
  background-image: url(data:image/png;base64,);
  background-repeat: no-repeat;
  position: absolute;
  left: 54rpx;
  top: 46rpx
}
.search-btn{
  height: 80rpx;
  line-height: 80rpx;
  margin: 0;
  margin-left: 40rpx
}

.hot-search{
  height: 50rpx;
  line-height: 50rpx;
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #666;
  margin-top: 20rpx
}

.hot-list{
  display: flex;
  margin-top: 26rpx;
  padding: 0 30rpx;
  flex-wrap: wrap;
}

.hot-item{
  color: #999;
  font-size: 34rpx;
  padding: 8rpx 40rpx;
  background-color: #ddd;
  border-radius: 6rpx;
  margin-right: 20rpx;
  margin-bottom: 14rpx
}
.hot-item:active{
  opacity: .8
}
