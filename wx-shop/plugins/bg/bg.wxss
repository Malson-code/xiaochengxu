/* plugins/bg/bg.wxss */

.pop-bg{
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .65);
  left: 0;
  z-index: 99;
  top: 0
}

.pop-bg-inner{
  width: 100%;
  height: 100%
}

.pop-bg-show{
  animation: showBg 0.3s linear
}

@keyframes showBg {
  0%{
    opacity: 0
  }
  100%{
    opacity: 1
  }
}